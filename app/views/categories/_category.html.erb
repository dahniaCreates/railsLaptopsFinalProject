<div class="col-sm-3">
  <div class="card" style="width: 14.5rem;">
    <h4 class="card-title"><%= link_to category.name, category %></h4>
    <% if category.image.present? %>
      <%=link_to category do %>
        <%= image_tag category.image.variant(resize_to_limit: [230, 230]).processed %>
      <%end%>
    <%end%>
  </div>
</div>

