    <% if @product.image.present? %>
<div class="card mb-3" style="max-width: 950px;">
  <div class="row no-gutters">
      <div class="col-md-4 d-flex justify-content-between" alt=<% @product.name%>>
        <%= image_tag @product.image.variant(resize_to_limit: [285, 285]).processed %>
      </div>
    <%end%>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%=@product.category.name%> - <%=@product.name%></h4>
        <p class="card-text">
          <%=@product.screen%> Screen,
          <%=@product.screen_size%> Screen Size,
          <%=@product.cpu%> CPU,
        </p>
        <p class="card-text">
          <%=@product.gpu%> GPU,
          <%=@product.ram%> RAM,
        </p>
        <p class="card-text">
          <%=@product.operating_system%>
          <%=@product.operating_system_version %>
        </p>
        <% if @product.discount_price.nil?%>
          <p class="card-text">
            <%=@product.storage%>
            $ <%=@product.price %>
          </p>
        <%else%>
        <p class="card-text">
          <%=@product.storage%>
        </p>
        <p class="card-text, text-muted"><s>
          $<%=@product.price %>
          </s>
        </p>
        <p class="card-text, text-danger">
        <strong>
          Sale: $<%=@product.discount_price%>
          </strong>
        </p>
        <%end%>
        <% if @cart.include?(@product) %>
          <%= form_with(url: add_to_cart_path) do |f| %>
              Quantity: <%= f.number_field :quanity, value: 1, min: 1 ,  class:"w-25 p-1 mb-3"%>
          <%end%>
          <%= link_to "Remove from cart", remove_from_cart_path(id: @product.id), method: :delete, class: "btn btn-dark" %>
          <% else %>
              <%= link_to "Add to cart", add_to_cart_path(id: @product.id), class: "btn btn-dark" %>
          <% end %>
      </div>
      </div>
  </div>
  </div>